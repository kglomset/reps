<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Transparent background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Bottom underline with margin -->
    <item android:gravity="bottom" android:bottom="4dp" android:left="40dp" android:right="40dp"> <!-- Add margin with android:bottom -->
        <shape android:shape="rectangle">
            <size android:height="2dp"/> <!-- Height of the underline -->
            <corners android:radius="4dp"/>
            <solid android:color="@color/wenge" /> <!-- Color of the underline -->
        </shape>
    </item>
</layer-list>
