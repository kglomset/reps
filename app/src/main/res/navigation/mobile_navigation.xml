<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.kwg.reps.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_workouts"
        android:name="com.kwg.reps.ui.workouts.WorkoutsFragment"
        android:label="@string/title_workouts"
        tools:layout="@layout/fragment_workouts" >
        <action
            android:id="@+id/action_navigation_workouts_to_trainingPlanSettingsFragment"
            app:destination="@id/trainingPlanSettingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_progress"
        android:name="com.kwg.reps.ui.progress.ProgressFragment"
        android:label="@string/title_progress"
        tools:layout="@layout/fragment_progress" />
    <fragment
        android:id="@+id/trainingPlanSettingsFragment"
        android:name="com.kwg.reps.ui.trainingprogram.TrainingPlanSettingsFragment"
        android:label="fragment_training_plan_settings"
        tools:layout="@layout/fragment_training_plan_settings" />
</navigation>